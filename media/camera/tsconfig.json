{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "useDefineForClassFields": true
  },
  "include": [
    ".eslintrc.cjs",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "vue.config.js",
    "webpack.config.js"
  ]
}

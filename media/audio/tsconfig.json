{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".eslintrc.cjs",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "vite.d.ts"
  ]
}
